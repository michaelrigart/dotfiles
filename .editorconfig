# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = LF
charset = utf-8
max_line_length = 120

[*.py]
max_line_length = 79

[*.vim]
max_line_length = 79

[*.rb]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.bat]
indent_style = tab
